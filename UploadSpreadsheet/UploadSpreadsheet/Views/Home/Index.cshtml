@model IEnumerable<DogData>

@{
    ViewData["Title"] = "Home Page";
}



<div class="row">
    <div class="col-md-3">
        <h2 class="p">Upload XLSX File</h2>
        <form method="post" asp-action="Upload" asp-controller="Home" enctype="multipart/form-data">
        <div class="form-group">
            <label name-for="file">Excel xlsx Upload</label>
            <input type="file" name="file" />      
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" />
        </div>
        </form>
    </div>
    <div class="col-md-9">
        @if (Model.Count() > 0)
        {


        <h2>File Data</h2>
        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Breed</th>
                <th>Age</th>
                <th>Gender</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var dog in Model)
                {
                    <tr>
                        <td>@dog.Name</td>
                        <td>@dog.Breed</td>
                        <td>@dog.Age</td>
                        <td>@dog.Gender</td>
                    </tr>
                }
            </tbody>

        </table>
        }

    </div>
   
   
</div>
